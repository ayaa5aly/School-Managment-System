                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@
                    <ul class="links">
                        <!--<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="Account/Login">Login</a>
                        </li>-->
                        <li class="">
                            <span>
                                <a style="text-decoration:none;color:#000" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </span>
                        </li>
                        <li class="">
                        <span class="link">Students</span>
                            <i class="fa-solid fa-angle-up"></i>
                            <div class="list">
                            <span>
                            <a style="text-decoration:none;color:#fff" asp-area="" asp-controller="Student" asp-action="Index">Students</a>
                            </span>
                            <span>
                            <a style="text-decoration:none;color:#fff" asp-area="" asp-controller="Student" asp-action="Create">Create Student</a>
                            </span>
                            </div>
                        </li>
                        <li class="">
                        <span class="link">Teachers</span>
                            <i class="fa-solid fa-angle-up"></i>
                            <div class="list">
                            <span>
                            <a style="text-decoration:none;color:#fff" asp-area="" asp-controller="Teacher" asp-action="Index">Teachers</a>
                            </span>
                            <span>
                            <a style="text-decoration:none;color:#fff" asp-area="" asp-controller="Teacher" asp-action="Create">Create Teacher</a>
                            </span>
                            </div>
                        </li>
                        <li class="">
                        <span class="link">Courses</span>
                            <i class="fa-solid fa-angle-up"></i>
                            <div class="list">
                            <span>
                            <a style="text-decoration:none;color:#fff" asp-area="" asp-controller="Course" asp-action="Index">Courses</a>
                            </span>
                            <span>
                            <a style="text-decoration:none;color:#fff" asp-area="" asp-controller="Course" asp-action="Create">Create Course</a>
                            </span>
                            </div>
                        </li>
                        <li class="">
                        <span class="link">Rooms</span>
                            <i class="fa-solid fa-angle-up"></i>
                            <div class="list">
                            <span>
                            <a style="text-decoration:none;color:#fff" asp-area="" asp-controller="Room" asp-action="Index">Rooms</a>
                            </span>
                            <span>
                            <a style="text-decoration:none;color:#fff" asp-area="" asp-controller="Room" asp-action="Create">Create Room</a>
                            </span>
                            </div>
                        </li>
                        <li class="">
                            <span>
                                <a style="text-decoration:none;color:#000" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </span>
                        </li>
                    </ul>
            </div>
            <div class="register">
                <a class="btn btn-primary"  asp-area="" asp-controller="Student"asp-action="Register">Registeration</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="wrapper bg-black">
        <div class="contain">
            &copy; 2024 - School Platform - <a style="color:#fff" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
